@model IEnumerable<iWasHere.Domain.DTOs.DictionaryCountryModel>



@{
    ViewData["Title"] = "Country";
    Layout = "~/Views/Shared/_DictionaryLayout.cshtml";
}
<!-- items.Add().Text("Add").Action("AddCountry", "DictionaryCountry", new { area = "" });-->
@(Html.Kendo().Button()
           .Name("primaryTextButton")
           .HtmlAttributes(new { type = "button", @class = "k-primary" })
           .Content("Add")
           .Events(ev => ev.Click("foo"))
)
<script>
    function foo()
    {
        window.location.href = '@Url.Action("AddCountry", "DictionaryCountry")';
    }
</script>

<!-- Html.ActionLink("AddCountry", "DictionaryCountry", new { /* id=item.PrimaryKey */ })-->

@(Html.Kendo().Grid<iWasHere.Domain.DTOs.DictionaryCountryModel>()
    .Name("Country")
    .Columns(columns =>
    {
        columns.Bound(c => c.CountryName).Width(140);
    })
    .HtmlAttributes(new { style = "height: 380px;" })
    .Scrollable()
    .Groupable()
    .Sortable()
    .Filterable()
    .Pageable(pageable => pageable
        .Refresh(true)
        .PageSizes(true)
        .ButtonCount(5))
    .DataSource(dataSource => dataSource
        .Ajax()
        .Read(read => read.Action("Countries_Read", "DictionaryCountry"))
    )
)